:ruby
  title "Portfolio | Adam Zucker"

.page
  .page__content
    .portfolio.flexbox.fd-column
      - @entries.each do |entry|
        - if entry.example_type == 'animation'
          = render partial: "pages/portfolio/entries/animation", locals: { entry: entry }
        - else
          = render partial: "pages/portfolio/entries/gif", locals: { entry: entry }


